
@{
    ViewData["Title"] = "ChangePassword";
}
@{
    Layout = "_LayoutLogin";
}
@using (Html.BeginForm("ChangePassword", "Login", FormMethod.Post))
{
<div class="card-body">
    <div class="form-group">
        <label for="password">
            Password temporanea
        </label>
        <input id="password" type="password" class="form-control" name="oldPsw" required data-eye>
    </div>
    <div class="form-group">
        <label for="password">
            Nuova Password
        </label>
        <input id="password" type="password" class="form-control" name="newPsw" required data-eye>
    </div>
    <div class="form-group no-margin">
        <button type="submit" class="btn btn-primary btn-block">
            Login
        </button>
    </div>
    @Html.ActionLink("clicca qui per tornare al login!", "Index", "Login")
</div>
}


